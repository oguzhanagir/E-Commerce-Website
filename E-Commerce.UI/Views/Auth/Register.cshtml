@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<partial name="~/Views/Shop/BreadCrumbs.cshtml"></partial>

<!-- Start Account Register Area -->
<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <div class="register-form">
                    <div class="title">
                        <h3>No Account? Register</h3>
                        <p>Registration takes less than a minute but gives you full control over your orders.</p>
                    </div>
                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success">
                            @ViewBag.SuccessMessage
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    <form class="row" method="post">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-fn">Ad</label>
                                <input class="form-control" name="FirstName" type="text" id="reg-fn" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-ln">Soyad</label>
                                <input class="form-control" name="LastName" type="text" id="reg-ln" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-email">E-Mail Adresi</label>
                                <input class="form-control" name="Email" type="email" id="reg-email" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-phone">Telefon Numarası</label>
                                <input class="form-control" name="PhoneNumber" type="text" id="reg-phone" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-pass">Şifre</label>
                                <input class="form-control" name="Password" type="password" id="reg-pass" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="reg-pass-confirm">Şifreyi Onayla</label>
                                <input class="form-control" name="PasswordConfirm" type="password" id="reg-pass-confirm" required>
                            </div>
                            <div id="password-error" style="color: red;"></div>
                        </div>
                        <div class="button">
                            <button class="btn" type="submit">Kayıt Ol</button>
                        </div>
                        <p class="outer-link">
                            Zaten bir hesabınız var mı? <a href="/Auth/Login">Giriş Yap</a>
                        </p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Account Register Area -->

<partial name="~/Views/Home/Footer.cshtml"></partial>

<script>
    function validateForm() {
        var password = document.getElementById("reg-pass").value;
        var passwordConfirm = document.getElementById("reg-pass-confirm").value;

        if (password !== passwordConfirm) {
            document.getElementById("password-error").innerText = "Şifreler uyuşmuyor.";
            return false;
        }

        return true;
    }
</script>
