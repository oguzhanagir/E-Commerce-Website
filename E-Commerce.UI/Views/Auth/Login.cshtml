@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<partial name="~/Views/Shop/BreadCrumbs.cshtml"></partial>


<!-- Start Account Login Area -->
<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }

                <form class="card login-form" method="post">
                    <div class="card-body">
                        <div class="title">
                            <h3>Giriş Yap</h3>
                            <p>You can login using your social media account or email address.</p>
                        </div>

                        <div class="form-group input-group">
                            <label for="reg-fn">E-Mail Adresiniz</label>
                            <input class="form-control" name="Email" type="email" id="reg-email" required>
                        </div>
                        <div class="form-group input-group">
                            <label for="reg-fn">Şifre</label>
                            <input class="form-control" name="Password" type="password" id="reg-pass" required>
                        </div>
                        <div class="d-flex flex-wrap justify-content-between bottom-content">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input width-auto" id="exampleCheck1">
                                <label class="form-check-label">Beni Hatırla</label>
                            </div>
                            <a class="lost-pass" href="account-password-recovery.html">Şifreni mi Unuttun</a>
                        </div>
                        <div class="button">
                            <button class="btn" type="submit">Giriş Yap</button>
                        </div>
                        <p class="outer-link">
                            Hesabınız yok mu? <a href="/Auth/Register">Kayıt Ol</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- End Account Login Area -->

<partial name="~/Views/Home/Footer.cshtml"></partial>