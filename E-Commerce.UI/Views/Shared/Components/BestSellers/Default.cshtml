@model IEnumerable<E_Commerce.Entity.Concrete.Product>
<div class="col-lg-4 col-md-4 col-12 custom-responsive-margin">
    <h4 class="list-title">@_localization.Getkey("BestSellers.Title").Value</h4>
    @foreach (var item in Model)
    {
        <!-- Start Single List -->
        <div class="single-list">
            <div class="list-image">
               @foreach (var image in item.ProductImages!)
                {
                    <a href="/Shop/ProductDetails/@item.Id"><img src="@image.ImagePath" alt="#"></a>
                }
            </div>
            <div class="list-info">
                <h3>
                    <a href="/Shop/ProductDetails/@item.Id">@item.Name</a>
                </h3>
                <span>@item.Price</span>
            </div>
        </div>
        <!-- End Single List -->
    }

</div>