@model IEnumerable<E_Commerce.Entity.Concrete.Blog> 
  
<!-- Start Single Widget -->
<div class="widget popular-feeds">
    <h5 class="widget-title">@_localization.Getkey("LatestBlogs.Title").Value</h5>
    <div class="popular-feed-loop">
      @foreach (var blog in Model)
        {
            <div class="single-popular-feed">
                <div class="feed-desc">
                    <a class="feed-img" href="/Blog/BlogSingle/@blog.Id">
                        <img src="@blog.Image" style="width:80px; height:80px;" alt="#">
                    </a>
                    <h6 class="post-title">
                        <a href="/Blog/BlogSingle/@blog.Id">
                           @blog.Title
                        </a>
                    </h6>
                    <span class="time"><i class="lni lni-calendar"></i> @blog.CreatedAt</span>
                </div>
            </div>
        }
     
    </div>
</div>
<!-- End Single Widget -->