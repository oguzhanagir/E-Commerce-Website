@model IEnumerable<E_Commerce.Entity.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<section class="table-components">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Kategori Tablosu</h2>
                        <a href="/Category/AddCategory" class="main-btn primary-btn rounded-md btn-hover mt-5 ">Kategori Ekle</a>
                        <a href="/Category/AddSubCategory" class="main-btn primary-btn rounded-md btn-hover mt-5 ">Alt Kategori Ekle</a>
                        <a href="/Category/UpdateMainCategory" class="main-btn primary-btn rounded-md btn-hover mt-5 ">Ana Kategoriyi Güncelle</a>
                        <a href="/Category/UpdateSubCategory" class="main-btn primary-btn rounded-md btn-hover mt-5 ">Alt Kategoriyi Güncelle</a>
                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#0">Kontrol Paneli</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Kategoriler
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== title-wrapper end ========== -->
        <!-- ========== tables-wrapper start ========== -->
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <h6 class="mb-10">Kategori Listesi</h6>
                        <div class="table-wrapper table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th><h5>Kategori Banner</h5></th>
                                        <th><h5>Kategori Adı</h5></th>
                                        <th><h5>Ana Kategori Sil</h5></th>

                                        
                                     
                                    </tr>
                                    <!-- end table row-->
                                </thead>
                                <tbody>
                                    @foreach (var category in Model)
                                    {
                                        <tr>
                                            <td>@category.Name</td>
                                            <td class="w-75">
                                                <div class="accordion text-center" id="accordion-@category.Id">

                                                    <div class="accordion-item">
                                                        <h2 class="accordion-header" id="heading-@category.Id">
                                                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@category.Id" aria-expanded="true" aria-controls="collapse-@category.Id">
                                                                Alt Kategorileri Göster
                                                            </button>
                                                        </h2>
                                                        <div id="collapse-@category.Id" class="accordion-collapse collapse show" aria-labelledby="heading-@category.Id" data-bs-parent="#accordion-@category.Id">
                                                            <div class="accordion-body">
                                                                <table class="table table-bordered">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Alt Kategori Adı</th>
                                                                            <th>Alt Kategori Sil</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        @foreach (var subCategory in category.SubCategories)
                                                                        {
                                                                            <tr>
                                                                                <td>
                                                                                    @subCategory.Name
                                                                                </td>
                                                                                <td>
                                                                                    <div class="action">
                                                                                        <a href="/Category/DeleteSubCategory/@subCategory.Id" class="text-danger m-auto">
                                                                                            <i class="lni lni-trash-can"></i>
                                                                                        </a>
                                                                                    </div>
                                                                                </td>
                                                                            </tr>
                                                                        }
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>
                                            </td>
                                            <td>
                                                <div class="action">
                                                    <a href="/Category/DeleteCategory/@category.Id" class="text-danger m-auto">
                                                        <i class="lni lni-trash-can"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>



                            </table>
                            <!-- end table -->
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->


        </div>
        <!-- ========== tables-wrapper end ========== -->
    </div>
    <!-- end container -->
</section>