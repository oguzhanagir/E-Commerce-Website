@{
    ViewData["Title"] = "AddSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-elements-wrapper mt-5">
    <div class="row">
        <div class="col-lg-6">
            <!-- input style start -->
            <div class="card-style mb-30">
                @using (Html.BeginForm("AddSubCategory", "Category", FormMethod.Post))
                {
                    <div class="input-style-1">
                        <label>Alt Kategori Adı</label>
                        <input name="Name" type="text" placeholder="Alt Kategori" />
                    </div>
                    <div class="input-style-1">
                        <select class="form-select" name="CategoryId" aria-label="Kategori">
                            <option>Kategori</option>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.Name @category.Id</option>
                            }
                        </select>
                    </div>
                    <!-- end input -->
                    <button type="submit" class="main-btn primary-btn rounded-md btn-hover mt-5 ">Alt Kategori Ekle</button>

                }
                <!-- end input -->
            </div>
        </div>
    </div>
</div>
