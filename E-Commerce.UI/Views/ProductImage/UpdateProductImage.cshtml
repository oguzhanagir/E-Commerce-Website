@model IEnumerable<E_Commerce.Entity.Concrete.ProductImage>
@{
    ViewData["Title"] = "UpdateProductImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<section class="table-components">
    <div class="container-fluid">
        <!-- ========== title-wrapper start ========== -->
        <div class="title-wrapper pt-30">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="title mb-30">
                        <h2>Resim Tablosu</h2>
                        <a href="/ProductImage/AddProductImage/@ViewBag.ProductId" class="main-btn primary-btn rounded-md btn-hover mt-5 ">Resim Ekle</a>

                    </div>
                </div>
                <!-- end col -->
                <div class="col-md-6">
                    <div class="breadcrumb-wrapper mb-30">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">
                                    <a href="#0">Kontrol Paneli</a>
                                </li>
                                <li class="breadcrumb-item active" aria-current="page">
                                    Resimler
                                </li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->
        </div>
        <!-- ========== title-wrapper end ========== -->
        <!-- ========== tables-wrapper start ========== -->
        <div class="tables-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card-style mb-30">
                        <h6 class="mb-10">Resim Listesi</h6>
                        <div class="table-wrapper table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th><h6>Resim Id</h6></th>
                                        <th><h6>Resim</h6></th>
                                        <th><h6>Sil</h6></th>
                                    </tr>
                                    <!-- end table row-->
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="min-width">
                                                <p>@item.Id</p>
                                            </td>
                                            <td class="min-width">
                                                <img src="/@item.ImagePath" style="width:150px; height:150px;" />
                                            </td>
                                           
                                            <td>
                                                <div class="action">
                                                    <a href="/ProductImage/DeleteProductImage/@item.Id?productId=@item.ProductId" class="text-danger">
                                                        <i class="lni lni-trash-can"></i>
                                                    </a>
                                                </div>
                                            </td>
                                           
                                        </tr>
                                        <!-- end table row -->
                                    }


                                </tbody>
                            </table>
                            <!-- end table -->
                        </div>
                    </div>
                    <!-- end card -->
                </div>
                <!-- end col -->
            </div>
            <!-- end row -->


        </div>
        <!-- ========== tables-wrapper end ========== -->
    </div>
    <!-- end container -->
</section>