@model E_Commerce.Entity.Concrete.Product
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.tiny.cloud/1/85g670p73mrxvdgf5t3g9fcg7it4xrqko3lxljbk4bn5tu0b/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<div class="form-elements-wrapper mt-5">
    <div class="row">
        <div class="col-lg-12">
            <!-- input style start -->
            <div class="card-style mb-30">
                @using (Html.BeginForm("UpdateProduct", "Shop", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="input-style-1">
                        <label>Ürün Adı</label>
                         @Html.TextBoxFor(x => x.Name, new { @class = "form-control input-default" })
                    </div>

                    <div class="input-style-1">
                        <label>Ürün Alt Açıklama</label>
                         @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control input-default" })
                    </div>

                    <br />
                    <div class="input-style-1">
                        @foreach (var item in Model.ProductImages!)
                        {
                            <img src="~/@item.ImagePath" style="width:150px; height:150px;" class="img" alt="@Model.Name">
                        }
                    </div>
<br />
                    <div class="input-style-1">
                        @Html.TextBoxFor(x => x.ProductImages, new { type = "file", multiple = "multiple" })
                    </div>
                  <br />
                   @Html.TextAreaFor(x => x.Description, new { @class = "form-control input-default" })
       
                    <br />

                    @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Category, new { @class = "form-select input-default" })

                    <br />

                    @Html.DropDownListFor(x => x.SubCategoryId, (List<SelectListItem>)ViewBag.SubCategories, new { @class = "form-select input-default" })
                    <br />
                    <div class="input-style-1">
                        <label>Ürün Stoğu</label>
                        @Html.TextBoxFor(x => x.Quantity, new { @class = "form-control input-default" })

                    </div>
                    <div class="input-style-1">
                        <label>Ürün Özellikleri</label>
                        @Html.TextAreaFor(x => x.Features, new { @class = "form-control input-default" })
                     
                    </div>

                    <div class="input-style-1">
                        <label>Ürün Fiyat</label>
                         @Html.TextBoxFor(x => x.Price, new { @class = "form-control input-default" })
                    </div>


                    <!-- end input -->
                    <button type="submit" class="main-btn primary-btn rounded-md btn-hover mt-5 ">Ürün Güncelle</button>

                }
                <!-- end input -->
            </div>
        </div>
    </div>
</div>

<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
    });
</script>
