@model E_Commerce.Entity.Concrete.Blog
@{
    ViewData["Title"] = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="https://cdn.tiny.cloud/1/85g670p73mrxvdgf5t3g9fcg7it4xrqko3lxljbk4bn5tu0b/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
<div class="form-elements-wrapper mt-5">
    <div class="row">
        <div class="col-lg-12">
            <!-- input style start -->
            <div class="card-style mb-30">
                @using (Html.BeginForm("UpdateBlog", "Blog", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="input-style-1">
                        <label>Ürün Adı</label>
                         @Html.TextBoxFor(x => x.Title, new { @class = "form-control input-default" })
                    </div>

          

                    <div class="input-style-1">
                        <input type="file" name="file"  />
                    </div>

                  <br />
                   @Html.TextAreaFor(x => x.Content, new { @class = "form-control input-default" })
      
                    <br />


                    <div class="input-style-1">
                        <label>Blog Kategorisi</label>
                        @Html.TextBoxFor(x => x.BlogCategory, new { @class = "form-control input-default" })
                    </div>


                    <!-- end input -->
                    <button type="submit" class="main-btn primary-btn rounded-md btn-hover mt-5 ">Güncelle</button>

                }
                <!-- end input -->
            </div>
        </div>
    </div>
</div>

<script>
    tinymce.init({
        selector: 'textarea',
        plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
        toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
    });
</script>